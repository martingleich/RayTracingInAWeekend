    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug run 'ray_tracing_in_a_weekend_app'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ray_tracing_in_a_weekend_app",
                    "--package=ray_tracing_in_a_weekend",

                ],
                "filter": {
                    "name": "ray_tracing_in_a_weekend_app",
                    "kind": "bin"
                },
            },
            "args": ["output/image.png", "800", "3900", "50"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release run 'ray_tracing_in_a_weekend_app'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ray_tracing_in_a_weekend_app",
                    "--package=ray_tracing_in_a_weekend",
                    "--release"
                ],
                "filter": {
                    "name": "ray_tracing_in_a_weekend_app",
                    "kind": "bin"
                }
            },
            "args": ["output/image.png", "1600", "10000", "50"],
            "cwd": "${workspaceFolder}"
        },
    ]
}