{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build",
			"dependsOn": ["rust: cargo fmt", "rust: cargo clippy"],
		},
		{
			"type": "cargo",
			"command": "fmt",
			"args": ["--all"],
			"problemMatcher": [],
			"group": "none",
			"label": "rust: cargo fmt"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"args": ["--all"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: cargo clippy",
			"dependsOn": ["rust: cargo fmt"]
		}
	]
}